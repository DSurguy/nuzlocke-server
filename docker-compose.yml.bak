version: "2"
services:
  pokeapi-cache-app:
    container_name: pokeapi-cache-app
    restart: always
    build: .
    environment:
      - POKEAPI_MONGO_HOST: localhost
      - POKEAPI_MONGO_PORT: 27107
      - POKEAPI_MONGO_DB: poke
     ports:
      - "8080:8080"
   pokeapi-cache-mongo:
      container_name: pokeapi-cache-mongo
      restart: always
      image: mongo
      environment:
    volumes:
      - ./_data:/data/db
    ports:
      - "27107:27107"
